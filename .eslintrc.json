{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "next/core-web-vitals"
    ],
    "overrides": [
        {
            "files": [
                "*.js",
                "*.mjs",
                "*.cjs",
                "*.jsx",
                "jest.config.js"
            ],
            "rules": {
                "quotes": [
                    "error",
                    "single",
                    {
                        "allowTemplateLiterals": true,
                        "avoidEscape": true
                    }
                ]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-mixed-spaces-and-tabs": [
            "error",
            "smart-tabs"
        ]
    },
    "globals": {
        "APlayer": "readonly"
    }
}